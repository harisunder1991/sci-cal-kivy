#:kivy 2.3.0
valign: "middle"
text_size: self.size
Button:
text: "DEG/RAD"
on_release: app.on_toggle_mode()


TextInput:
id: display
text: app.display_text
readonly: True
halign: "right"
font_size: "36sp"
size_hint_y: None
height: "80dp"


GridLayout:
cols: 5
spacing: 6
row_default_height: "58dp"
row_force_default: True


# Row 1
Button:text:"(" on_release: app.on_button("(")
Button:text:")" on_release: app.on_button(")")
Button:text:"pi" on_release: app.on_button("pi")
Button:text:"e" on_release: app.on_button("e")
Button:text:"⌫" on_release: app.on_button("⌫")


# Row 2
Button:text:"sin(" on_release: app.on_button("sin(")
Button:text:"cos(" on_release: app.on_button("cos(")
Button:text:"tan(" on_release: app.on_button("tan(")
Button:text:"ln(" on_release: app.on_button("ln(")
Button:text:"log(" on_release: app.on_button("log(")


# Row 3
Button:text:"7" on_release: app.on_button("7")
Button:text:"8" on_release: app.on_button("8")
Button:text:"9" on_release: app.on_button("9")
Button:text:"^" on_release: app.on_button("**")
Button:text:"sqrt(" on_release: app.on_button("sqrt(")


# Row 4
Button:text:"4" on_release: app.on_button("4")
Button:text:"5" on_release: app.on_button("5")
Button:text:"6" on_release: app.on_button("6")
Button:text:"*" on_release: app.on_button("*")
Button:text:"/" on_release: app.on_button("/")


# Row 5
Button:text:"1" on_release: app.on_button("1")
Button:text:"2" on_release: app.on_button("2")
Button:text:"3" on_release: app.on_button("3")
Button:text:"+" on_release: app.on_button("+")
Button:text:"-" on_release: app.on_button("-")


# Row 6
Button:text:"C" on_release: app.on_button("C")
Button:text:"0" on_release: app.on_button("0")
Button:text:"." on_release: app.on_button(".")
Button:text:"=" on_release: app.on_button("=")
Widget:
